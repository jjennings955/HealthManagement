<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vitalParent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vitalTip"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="180dp"
        android:textColor="#939393"
        android:text="You have not tracked any vital signs today. Add some by clicking the + button at the top of your screen!"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/vitals_BP_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Blood Pressure"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/vitals_bplistview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingBottom="6dip"
        android:paddingTop="4dip" >
    </ListView>

    <TextView
        android:id="@+id/vitals_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Weight"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/vitals_weightlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >
    </ListView>

    <TextView
        android:id="@+id/vitals_bloodsugar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Blood Sugar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/vitals_bloodsugar_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >
    </ListView>

    <TextView
        android:id="@+id/vitals_cholesterol_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Cholesterol"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/vitals_cholesterol_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >
    </ListView>

</LinearLayout>